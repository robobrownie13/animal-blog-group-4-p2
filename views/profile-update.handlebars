                <input type="text" id="edit-title" value="{{post.title}}">
                <textarea rows="7" id="edit-post">{{post.post_text}}</textarea>
            </div>
            <div class="edit-button">
                <button type="submit">update post</button>
            </div>
        </form>
    </div>
</div>
