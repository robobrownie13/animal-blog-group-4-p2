<section>
  {{! <div class="page-cover" id="edit-page-cover"></div> }}
  <!-- NEW POST MODAL -->
  <div class="edit-post" id="edit-post-pop">
    <div class="edit-card">
      <div class="close-post-button">
        <a href="/profile/user"><i class="bx bx-x-circle bx-sm"></i></a>
      </div>
      <form class="edit-form new-form-post" data-id="{{id}}">
        <div class="edit-text">
          <input type="text" id="new-title" placeholder="Title" />
          <textarea
            rows="7"
            id="new-post"
            placeholder="What's on your mind?..."
          ></textarea>
        </div>
        <div class="edit-button">
          <button id="new-post-button" type="submit">new post</button>
        </div>
      </form>
    </div>
  </div>
</section>
